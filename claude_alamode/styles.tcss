/* Claude Code Textual UI Styles
 *
 * Visual language: All content blocks use left border bars to indicate type.
 * - User messages: vibrant orange border
 * - Assistant messages: dim blue border
 * - Tool uses: subtle gray border
 * All blocks have transparent backgrounds and consistent spacing.
 */

Screen {
    background: black;
    layers: below above modal;
}

/* Scrollbar styling - applied to scrollable containers */
* {
    scrollbar-background: #111111;
    scrollbar-background-hover: #111111;
    scrollbar-background-active: #111111;
    scrollbar-color: #333333;
    scrollbar-color-hover: #444444;
    scrollbar-color-active: #555555;
}

Header {
    background: #111111;
}

Footer {
    background: #111111;
}

/* Shared block styling - all content blocks */
ChatMessage, ToolUseWidget, ThinkingIndicator {
    background: transparent;
    margin: 0 0 1 0;  /* 1 line between blocks */
    padding: 0 2 0 1;
    border-left: wide transparent;
}

/* User messages - vibrant orange, extra spacing */
ChatMessage.user-message {
    border-left: thick #cc7700;
    margin: 2 0 2 0;
}

/* Assistant messages - softer */
ChatMessage.assistant-message {
    border-left: wide #334455;
}

/* Tool uses - subtle, highlight on hover */
ToolUseWidget {
    border-left: wide #333333;
    margin: 0;
}

ToolUseWidget.hovered {
    border-left: wide #666666;
    background: #111111;
}

/* Task widgets - slightly more prominent */
TaskWidget {
    border-left: wide #445566;
    margin: 0;
}

/* Nested content inside tasks is indented */
TaskWidget #task-content {
    padding-left: 2;
}

/* Thinking indicator - subtle */
ThinkingIndicator {
    border-left: wide #333333;
    color: $text-muted;
}

/* Add spacing when following tool uses */
ChatMessage.after-tool, ThinkingIndicator.after-tool {
    margin-top: 1;
}

/* Copy buttons - hidden until hover */
.copy-btn, .tool-copy-btn {
    dock: right;
    width: 3;
    min-width: 3;
    height: 1;
    background: transparent;
    border: none;
    color: transparent;
}

ChatMessage:hover .copy-btn,
ToolUseWidget:hover .tool-copy-btn {
    color: $text-muted;
}

.copy-btn:hover, .tool-copy-btn:hover {
    color: $text;
}

/* Main layout */
#main {
    align: center top;
    height: 1fr;
}

/* Chat views - both initial and dynamically created */
#chat-view, .chat-view {
    width: 1fr;
    max-width: 100;
    padding: 1 1;
}

#chat-view.hidden, .chat-view.hidden {
    display: none;
}

/* Session picker */
#session-picker {
    width: 1fr;
    max-width: 80;
    padding: 1 2;
}

#session-picker.hidden {
    display: none;
}

#session-picker > SessionItem {
    padding: 1 2;
    height: auto;
    margin: 0 0 1 0;
    background: $surface;
}

#session-picker > SessionItem:hover {
    background: $surface-lighten-1;
}

/* Worktree modal overlay */
#worktree-modal {
    layer: modal;
    width: 100%;
    height: 100%;
    align: center middle;
    background: rgba(0, 0, 0, 0.7);
}

/* Shared prompt placeholder style */
.prompt-placeholder {
    color: $text-muted;
}

/* Image attachments indicator - shows above input */
#image-attachments {
    width: 100;
    height: auto;
    padding: 0 0;
    align: left middle;
}

#image-attachments.hidden {
    display: none;
}

#image-attachments .image-tag {
    min-width: 10;
    width: auto;
    height: 1;
    margin: 0 1 0 0;
    padding: 0 1;
    background: #444444;
    color: #cccccc;
    border: none;
}

#image-attachments .image-tag:hover {
    background: #555555;
    color: #ffffff;
}

/* Input wrapper for centering */
#input-wrapper {
    dock: bottom;
    width: 100%;
    height: auto;
    min-height: 5;
    max-height: 14;
    align: center top;
}

#input-container {
    width: 100%;
    max-width: 100;
    height: auto;
    padding: 1 0;
    margin: 1 0;
    border-left: wide #333333;
    background: #1a1408;  /* Slight orange tint */
}

#input-container:focus-within {
    border-left: wide #cc7700;
}

#input-container.hidden {
    display: none;
}

/* Input area */
#input {
    height: auto;
    min-height: 1;
    max-height: 10;
    width: 100%;
    border: none;
    padding: 0 1;
    background: transparent;
}

#input .text-area--cursor-line {
    background: transparent;
}

/* Markdown resets */
Markdown {
    padding: 0;
    margin: 0;
}

/* Remove bottom margin from last element in markdown containers */
ChatMessage MarkdownParagraph:last-of-type,
ChatMessage MarkdownFence:last-of-type,
ToolUseWidget MarkdownParagraph:last-of-type,
ToolUseWidget MarkdownFence:last-of-type {
    margin-bottom: 0;
}

/* Tool use collapsible internals */
ToolUseWidget Collapsible {
    border: none;
    padding: 0;
    background: transparent;
}

ToolUseWidget Collapsible.error {
    background: $error 10%;
}

ToolUseWidget Collapsible CollapsibleTitle {
    color: $text-muted;
    padding: 0 0;
    width: 100%;
    background: transparent;
}

ToolUseWidget Collapsible Contents {
    padding: 0 0 0 2;
    background: transparent;
}

#diff-content {
    color: $text;
}

/* Header indicators */
CPUBar {
    width: 10;
    padding: 0 1;
    content-align: right middle;
}

ContextBar {
    width: 18;
    padding: 0 1;
    content-align: right middle;
}

HeaderIndicators {
    dock: right;
    width: 30;
    height: 1;
    layout: horizontal;
}

/* Selection/Question/Worktree prompts - shared styles */
SelectionPrompt, QuestionPrompt, WorktreePrompt {
    height: auto;
    width: 100%;
    max-width: 100;
    background: #111111;
    border-left: tall #333333;
    padding: 0 2 0 1;
}

WorktreePrompt {
    width: 50;
    padding: 1 2 1 1;
}

.prompt-title {
    color: $text;
    padding: 0 0 1 0;
}

.prompt-option {
    padding: 0 0 0 1;
    color: $text-muted;
    border-left: tall #333333;
}

.prompt-option.selected {
    color: $text;
    background: #222222;
    border-left: tall #cc7700;
}

/* Right sidebar - agents + todos stacked, docked right so chat stays centered */
#right-sidebar {
    dock: right;
    width: 28;
    height: 100%;
    border-left: solid #333333;
}

#right-sidebar.hidden {
    display: none;
}

/* Todo panel - inside right sidebar */
#todo-panel {
    width: 100%;
    height: auto;
    max-height: 50%;
    border-top: solid #333333;
    padding: 1;
}

#todo-panel.hidden {
    display: none;
}

#todo-panel .todo-title {
    color: $text-muted;
    text-style: bold;
    padding: 0 0 1 0;
}

/* Todo widget - inline checklist */
TodoWidget {
    border-left: tall #555588;
    padding: 0 1;
    margin: 0 0 1 0;
}

TodoItem {
    height: 1;
}

/* Toast notifications */
Toast {
    background: #111111;
    border-left: tall #333333;
    padding: 0 1;
}

Toast.-error {
    border-left: tall #cc3333;
}

ToastRack {
    margin-bottom: 6;
}
