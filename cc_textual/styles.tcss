/* Claude Code Textual UI Styles
 *
 * Visual language: All content blocks use left border bars to indicate type.
 * - User messages: vibrant orange border
 * - Assistant messages: dim blue border
 * - Tool uses: subtle gray border
 * All blocks have transparent backgrounds and consistent spacing.
 */

Screen {
    background: black;
    layers: below above modal;
}

Header {
    background: #111111;
}

Footer {
    background: #111111;
}

/* Shared block styling - all content blocks */
ChatMessage, ToolUseWidget, ThinkingIndicator {
    background: transparent;
    margin: 0 0 1 0;  /* 1 line between blocks */
    padding: 0 2 0 1;
    border-left: tall transparent;
}

/* User messages - vibrant orange, extra spacing */
ChatMessage.user-message {
    border-left: tall #cc7700;
    margin: 2 0 2 0;
}

/* Assistant messages - softer */
ChatMessage.assistant-message {
    border-left: tall #334455;
}

/* Tool uses - subtle, highlight on hover */
ToolUseWidget {
    border-left: tall #333333;
    margin: 0;
}

ToolUseWidget.hovered {
    border-left: tall #666666;
    background: #111111;
}

/* Task widgets - slightly more prominent */
TaskWidget {
    border-left: tall #445566;
    margin: 0;
}

/* Nested content inside tasks is indented */
TaskWidget #task-content {
    padding-left: 2;
}

/* Thinking indicator - subtle */
ThinkingIndicator {
    border-left: tall #333333;
    color: $text-muted;
}

/* Add spacing when following tool uses */
ChatMessage.after-tool, ThinkingIndicator.after-tool {
    margin-top: 1;
}

/* Copy buttons - hidden until hover */
.copy-btn, .tool-copy-btn {
    dock: right;
    width: 3;
    min-width: 3;
    height: 1;
    background: transparent;
    border: none;
    color: transparent;
}

ChatMessage:hover .copy-btn,
ToolUseWidget:hover .tool-copy-btn {
    color: $text-muted;
}

.copy-btn:hover, .tool-copy-btn:hover {
    color: $text;
}

/* Main layout */
#main {
    align: center top;
    height: 1fr;
}

#chat-view {
    width: 1fr;
    max-width: 100;
    padding: 1 1;
}

#chat-view.hidden {
    display: none;
}

/* Session picker */
#session-picker {
    width: 1fr;
    max-width: 80;
    padding: 1 2;
}

#session-picker.hidden {
    display: none;
}

#session-picker > SessionItem {
    padding: 1 2;
    height: auto;
    margin: 0 0 1 0;
    background: $surface;
}

#session-picker > SessionItem:hover {
    background: $surface-lighten-1;
}

/* Worktree modal overlay */
#worktree-modal {
    layer: modal;
    width: 100%;
    height: 100%;
    align: center middle;
    background: rgba(0, 0, 0, 0.7);
}

/* Shared prompt placeholder style */
.prompt-placeholder {
    color: $text-muted;
}

/* Input wrapper for centering */
#input-wrapper {
    dock: bottom;
    width: 100%;
    height: auto;
    min-height: 5;
    max-height: 12;
    align: center top;
    padding: 0 0 1 0;
}

/* Input area */
#input {
    height: auto;
    min-height: 3;
    max-height: 10;
    width: 100%;
    max-width: 100;
    border: solid gray;
    background: $surface;
}

#input:focus {
    border: solid white;
}

#input.hidden {
    display: none;
}

/* Markdown resets */
Markdown {
    padding: 0;
    margin: 0;
}

/* Tool use collapsible internals */
ToolUseWidget Collapsible {
    border: none;
    padding: 0;
    background: transparent;
}

ToolUseWidget Collapsible.error {
    background: $error 10%;
}

ToolUseWidget Collapsible CollapsibleTitle {
    color: $text-muted;
    padding: 0 0;
    width: 100%;
    background: transparent;
}

ToolUseWidget Collapsible Contents {
    padding: 0 0 0 2;
    background: transparent;
}

#diff-content {
    color: $text;
}

/* Header indicators */
CPUBar {
    width: 10;
    padding: 0 1;
    content-align: right middle;
}

ContextBar {
    width: 18;
    padding: 0 1;
    content-align: right middle;
}

HeaderIndicators {
    dock: right;
    width: 30;
    height: 1;
    layout: horizontal;
}

/* Selection/Question/Worktree prompts - shared styles */
SelectionPrompt, QuestionPrompt, WorktreePrompt {
    height: auto;
    width: 100;
    max-width: 100;
    background: #111111;
    border-left: tall #333333;
    padding: 0 2 0 1;
}

WorktreePrompt {
    width: 50;
    padding: 1 2 1 1;
}

.prompt-title {
    color: $text;
    padding: 0 0 1 0;
}

.prompt-option {
    padding: 0 0 0 1;
    color: $text-muted;
    border-left: tall #333333;
}

.prompt-option.selected {
    color: $text;
    background: #222222;
    border-left: tall #cc7700;
}

/* Todo panel - floats right of centered chat via layer */
#todo-panel {
    layer: above;
    width: 32;
    height: auto;
    max-height: 80%;
    border-left: tall #555588;
    padding: 1;
}

#todo-panel.hidden {
    display: none;
}

#todo-panel .todo-title {
    color: $text-muted;
    text-style: bold;
    padding: 0 0 1 0;
}

/* Todo widget - inline checklist */
TodoWidget {
    border-left: tall #555588;
    padding: 0 1;
    margin: 0 0 1 0;
}

TodoItem {
    height: 1;
}
