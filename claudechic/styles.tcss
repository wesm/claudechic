/* Claude Code Textual UI Styles
 *
 * CSS POLICY:
 * -----------
 * Widgets use DEFAULT_CSS for co-located styles (Tailwind-style).
 * This file contains app-level layout and shared styles.
 * Use theme variables ($primary, $surface, etc.) - avoid hardcoded hex colors.
 *
 * Visual language: All content blocks use left border bars to indicate type.
 * - User messages: vibrant orange border ($primary)
 * - Assistant messages: dim blue border ($secondary)
 * - Tool uses: subtle gray border ($panel)
 * All blocks have transparent backgrounds and consistent spacing.
 *
 * Theme colors are defined in app.py via Textual's Theme system.
 */

Screen {
    background: $background;
    layers: below above modal;
}

/* Scrollbar styling - applied to scrollable containers */
* {
    scrollbar-background: $surface;
    scrollbar-background-hover: $surface;
    scrollbar-background-active: $surface;
    scrollbar-color: $panel;
    scrollbar-color-hover: $panel-lighten-1;
    scrollbar-color-active: $panel-lighten-2;
}

/* Button styling - subtle dark buttons with visible hover */
Button {
    background: $surface;
    color: $text;
    border: none;
    min-width: 10;
    height: 1;
    padding: 0 1;
}

Button:hover {
    background: $accent !important;
    color: white !important;
}

Button:focus {
    background: $surface;
    text-style: none;
}

/* Custom status footer */
StatusFooter {
    dock: bottom;
    height: 1;
    background: $surface;
}

#footer-content {
    height: 1;
}

.footer-label {
    color: $text-muted;
    padding: 0 1;
    width: auto;
}

.footer-sep {
    color: $panel;
    width: auto;
}

#footer-spacer {
    width: 1fr;
}

.footer-label.active {
    color: $primary;
}

/* Shared block styling - all content blocks */
ChatMessage, ToolUseWidget, ThinkingIndicator, ErrorMessage, SystemInfo {
    background: transparent;
    margin: 0 2 1 0;  /* 1 line between blocks, 2 from scrollbar */
    padding: 0 2 0 2;
}

/* Error messages - red, like user messages but indicating problems */
ErrorMessage {
    border-left: thick $error;
    background: $error 10%;
    margin: 1 0 1 0;
}

/* System info messages - muted, informational */
SystemInfo {
    border-left: thick $panel;
    color: $panel;
    margin: 1 0 1 0;
}

SystemInfo.system-warning {
    border-left: thick $warning;
    color: $warning;
}

SystemInfo.system-error {
    border-left: thick $error;
}

/* User messages - vibrant orange, extra spacing */
ChatMessage.user-message {
    border-left: thick $primary;
    margin: 2 0 2 0;
}

/* Assistant messages - softer, consistent spacing */
ChatMessage.assistant-message {
    border-left: wide $secondary;
    margin: 1 0 1 0;
}

/* Summary messages - final text after tool uses, emphasized like user messages */
ChatMessage.summary {
    border-left: thick $secondary;
    margin: 2 0 1 0;
}

/* System messages - compaction summaries, etc. */
ChatMessage.system-message {
    border-left: wide $warning;
    margin: 2 0 2 0;
    background: $surface;
}

/* Tool uses - subtle, highlight on hover */
ToolUseWidget {
    border-left: wide $panel;
    margin: 0;
}

ToolUseWidget.hovered {
    border-left: wide $panel-lighten-2;
    background: $surface;
}

/* Task widgets - slightly more prominent */
TaskWidget {
    border-left: wide $accent;
    margin: 0;
}

/* Nested content inside tasks is indented */
TaskWidget #task-content {
    padding-left: 2;
}

/* Thinking indicator - fixed position above input */
#thinking-indicator {
    height: 1;
    padding: 0 2;
    color: $text-muted;
    margin: 0;
}

#thinking-indicator.hidden {
    display: none;
}


/* Copy buttons - overlaid, hidden until hover */
.copy-btn {
    display: none;
    layer: above;
    dock: right;
    width: 3;
    min-width: 3;
    height: 1;
    padding: 0;
    text-align: center;
    background: transparent;
    border: none;
    color: $text-muted;
}

.hovered .copy-btn {
    display: block;
}

.copy-btn:hover {
    color: $primary !important;
    background: transparent !important;
}

/* Main layout */
#main {
    height: 1fr;
    align: center top;
}

/* Chat views - both initial and dynamically created */
#chat-view, .chat-view {
    width: 100;
    padding: 1 1;
}

#chat-view.hidden, .chat-view.hidden {
    display: none;
}

/* Session picker */
#session-picker {
    width: 1fr;
    max-width: 80;
    padding: 1 2;
    background: $background;
}

#session-picker > * {
    background: $background;
}

#session-picker.hidden {
    display: none;
}

#session-picker > SessionItem {
    padding: 0 0 0 1;
    height: auto;
    margin: 0 0 1 0;
    border-left: tall $panel;
}

#session-picker > SessionItem:hover,
#session-picker > SessionItem.-selected {
    background: $surface-darken-1;
    border-left: tall $primary;
}

#session-picker .session-meta {
    color: $text-muted;
}

/* Worktree modal overlay */
#worktree-modal {
    layer: modal;
    width: 100%;
    height: 100%;
    align: center middle;
    background: rgba(0, 0, 0, 0.7);
}

/* Shared prompt placeholder style */
.prompt-placeholder {
    color: $text-muted;
}

/* Image attachments indicator - shows above input */
#image-attachments {
    width: 100%;
    height: auto;
    padding: 0 1 1 1;
    align: left middle;
}

#image-attachments.hidden {
    display: none;
}

#image-attachments .image-tag {
    min-width: 10;
    width: auto;
    height: 1;
    margin: 0 1 0 0;
    padding: 0 1;
    background: $panel-lighten-1;
    color: $text-muted;
    border: none;
}

#image-attachments .image-tag:hover {
    background: $panel-lighten-2;
    color: $text;
}

/* Clickable attachment tags in chat messages */
.chat-attachment {
    min-width: 10;
    width: auto;
    height: 1;
    margin: 0 1 1 1;
    padding: 0 1;
    background: $panel;
    color: $text-muted;
    border: none;
}

.chat-attachment:hover {
    background: $panel-lighten-1;
    color: $text;
}

/* Input wrapper for centering */
#input-wrapper {
    dock: bottom;
    width: 100%;
    height: auto;
    align: center top;
}

#input-container {
    width: 100%;
    max-width: 90;
    height: auto;
    padding: 1 0;
    margin: 1 0;
    border-left: wide $primary;
    background: $primary 10%;
}

#input-container.hidden {
    display: none;
}

/* Input area */
#input {
    height: auto;
    min-height: 1;
    max-height: 10;
    width: 100%;
    border: none;
    padding: 0 1;
    background: transparent;
}

#input .text-area--cursor-line {
    background: transparent;
}

/* Markdown resets */
Markdown {
    padding: 0;
    margin: 0;
}

/* Markdown overrides - neutral headers, brighter code blocks */
MarkdownH1, MarkdownH2, MarkdownH3 {
    color: $text;
    text-style: bold;
}

MarkdownTableContent > .header {
    color: $text;
}

MarkdownFence {
    background: $surface;
}

/* Remove bottom margin from last element in markdown containers */
ChatMessage MarkdownParagraph:last-of-type,
ChatMessage MarkdownFence:last-of-type,
ToolUseWidget MarkdownParagraph:last-of-type,
ToolUseWidget MarkdownFence:last-of-type {
    margin-bottom: 0;
}

/* Tool use spinner - overlaid on collapsible expand arrow */
ToolUseWidget > Spinner {
    layer: above;
    dock: top;
    background: transparent;
}

/* Tool use collapsible internals */
ToolUseWidget Collapsible {
    border: none;
    padding: 0;
    background: transparent;
}

ToolUseWidget Collapsible.error {
    background: $error 10%;
}

ToolUseWidget Collapsible.error.-collapsed {
    background: $error 25%;
}

ToolUseWidget Collapsible CollapsibleTitle {
    color: $text-muted;
    padding: 0 0;
    width: 100%;
    background: transparent;
}

ToolUseWidget Collapsible Contents {
    padding: 0 0 0 2;
    background: transparent;
}

/* Footer indicators (CPU and context bars) */
CPUBar {
    width: auto;
    padding: 0 1;
    content-align: right middle;
}

ContextBar {
    width: auto;
    padding: 0 1;
    content-align: right middle;
}

/* All prompts inheriting from BasePrompt */
.base-prompt {
    height: auto;
    width: 100%;
    max-width: 90;
    background: $surface;
    border-left: tall $primary;
    padding: 0 2 1 1;
}

WorktreePrompt {
    width: 50;
    padding: 1 2 1 1;
}

.prompt-title {
    color: $text;
    padding: 0 0 1 0;
}

.prompt-option {
    padding: 0 0 0 1;
    color: $text-muted;
    border-left: tall $panel;
}

.prompt-option.selected {
    color: $text;
    background: $surface-lighten-1;
    border-left: tall $primary;
}

.prompt-option.prompt-placeholder {
    color: $text-disabled;
}

.prompt-option.prompt-placeholder.selected {
    color: $text-muted;
}

/* Right sidebar - agents + todos stacked */
#right-sidebar {
    width: 28;
    height: 100%;
    /* Negative margin shifts chat+sidebar group left so chat is centered */
    margin-right: -28;
}

#right-sidebar.hidden {
    display: none;
}

/* Todo panel - inside right sidebar */
#todo-panel {
    width: 100%;
    height: auto;
    max-height: 50%;
    border-top: solid $panel;
    padding: 1;
}

#todo-panel.hidden {
    display: none;
}

#todo-panel .todo-title {
    color: $text-muted;
    text-style: bold;
    padding: 0 0 1 0;
}

/* Todo widget - inline checklist */
TodoWidget {
    border-left: tall $accent;
    padding: 0 1;
    margin: 0 0 1 0;
}

TodoItem {
    height: 1;
}

/* Toast notifications */
Toast {
    background: $surface;
    border-left: tall $panel;
    padding: 0 1;
}

Toast.-error {
    border-left: tall $error;
}

ToastRack {
    margin-bottom: 6;
}
